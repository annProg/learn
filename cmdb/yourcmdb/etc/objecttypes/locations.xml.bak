<group name="locations">
	<object-type name="datacenter">
		<links>
			<link name="Location on GoogleMaps" href="http://www.google.de/maps/place/%street%,%zip% %city%" />
		</links>
		<fields>
			<fieldgroup name="location">
				<field name="street" type="text" />
				<field name="zip" type="text" />
				<field name="city" type="text" summaryfield="true" />
				<field name="country" type="text" summaryfield="true"/>
			</fieldgroup>
		</fields>
	</object-type>
</group>
